@model IEnumerable<Online_Courses_2024.ViewModel.CourseModelView>

@{
    ViewData["Title"] = "getCoursesForAdmin";
}

<h1 class="text-center my-4">Courses</h1>

<div class="container">
    <p class="text-start mb-3">

        <a class="btn btn-outline-success fs-5 create" asp-action="Create">
            Create
            <img src="~/assets/img/photo_2024-10-20_14-56-44.jpg" width="40px" height="30px" class="me-1" style="background-color:transparent" />
        </a>
       
    </p>

    <table class="table table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DurationAttribute)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Instructor)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DurationAttribute)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Instructor.Id)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.CourseId">Edit</a>
                        
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>