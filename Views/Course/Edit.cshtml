@model Online_Courses_2024.Models.Course

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit Course</h1>

    <h4>Course Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CourseId" />

                <div class="form-group">
                    <label asp-for="CourseName" class="control-label"></label>
                    <input asp-for="CourseName" class="form-control" placeholder="Enter course name" />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter course description" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter course price" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DurationAttribute" class="control-label"></label>
                    <input asp-for="DurationAttribute" class="form-control" placeholder="Enter course duration" />
                    <span asp-validation-for="DurationAttribute" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="InstructorId">Instructor</label>
                    @if (ViewBag.Instructors != null && ViewBag.Instructors.Count > 0)
                    {
                        <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.Instructors">
                            <option value="">Select an instructor</option>
                        </select>
                    }
                    else
                    {
                        <p class="text-danger">No instructors available.</p>
                    }
                    <span asp-validation-for="InstructorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary"  />
                    <a asp-action="getCoursesForAdmin" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="getCoursesForAdmin">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
